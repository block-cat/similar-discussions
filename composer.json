{
  "name": "block-cat/similar-discussions",
  "description": "Show similar discussions on pane based on tags",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.0.2"
  },
  "authors": [{
    "name": "BlockCat"
  }],
  "autoload": {
    "psr-4": {
      "BlockCat\\SimilarDiscussions\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "BkC Similar Discussions",
      "category": "other",
      "icon": {
        "name": "fas fa-comments",
        "backgroundColor": "#083",
        "color": "#fff"
      }
    }
  }
}
